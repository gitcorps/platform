# Firebase Functions (Gen2) runtime environment variables
# Copy to functions/.env for local emulators and functions/.env.<projectId> for deploy-time values.

GITHUB_TOKEN=
GITHUB_ORG_NAME=gitcorps
PUBLIC_SITE_DOMAIN=gitcorps.com
PROJECT_SITE_TEMPLATE={slug}.gitcorps.com
DEFAULT_LICENSE=MIT

MIN_RUN_USD=2
MAX_RUN_USD=10
GLOBAL_MAX_CONCURRENT_RUNS=10
GLOBAL_MAX_DAILY_SPEND_USD=500
PER_PROJECT_MAX_DAILY_SPEND_USD=100

LLM_PROVIDER_DEFAULT=openai
LLM_MODEL_DEFAULT=gpt-4.1
AGENT_RUNTIME_DEFAULT=copilot_cli

# Must match deployed Functions base URL
# Example: https://us-central1-your-project.cloudfunctions.net
BACKEND_BASE_URL=

RUN_TOKEN_TTL_MINUTES=120
RUN_QUEUE_CHECK_LIMIT=25
BUCKET_RUNTIME_MINUTES_PER_USD=5
BUCKET_TOKENS_PER_USD=75000
